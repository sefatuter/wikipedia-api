<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>API Get</title>
    <link rel="stylesheet" href="styles/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <div class="wrapper">
      <div class="container mt-4">
        <img src="images/wwikiLogo.png" alt="" id="wiki2" />
        <img src="images/wwiki.png" alt="" id="wiki" />

        <form id="myForm" method="POST">
          <div class="card">
            <div
              class="card-body justify-content-center"
              style="display: flex; gap: 10px"
            >
              <label for="monthInput">Month (1-12): </label>
              <input type="text" id="monthInput" name="month" />

              <label for="dayInput">Day (1-31): </label>
              <input type="text" id="dayInput" name="day" />
            </div>

            <div
              style="display: flex; gap: 10px"
              class="p-3 justify-content-center"
            >
              <input
                id="get"
                type="submit"
                value="Random Event"
                class="btn btn-success btn-sm"
                formaction="/get-events"
              />
              <input
                id="get"
                type="submit"
                value="Random Death"
                class="btn btn-danger btn-sm"
                formaction="/get-deaths"
              />
              <input
                id="get"
                type="submit"
                value="Random Birth"
                class="btn btn-warning btn-sm"
                formaction="/get-births"
              />
            </div>

            <div class="card-header text-center border border-radius-1rem">
              <%= content %>
              <br /><br />
              <p class="text-muted text-align-left"><%= date %></p>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
